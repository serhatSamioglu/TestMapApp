<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListPhotosActivity">


    <ImageView
        android:id="@+id/listPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/listPhotoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/listPhotoImageView" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/previousButton"
        android:text="Geri"
        android:textSize="20sp"
        android:onClick="previousButtonTabbed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/nextButton"
        android:text="Ä°leri"
        android:onClick="nextButtonTabbed"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>